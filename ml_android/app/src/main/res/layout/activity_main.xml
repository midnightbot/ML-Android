<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <RelativeLayout android:layout_height="match_parent"
            android:layout_width="match_parent">


            <EditText
                android:id="@+id/input_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Enter value of x" />

            <Button
                android:id="@+id/process_btn"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:layout_height="wrap_content"
                android:text="Process"
                android:layout_below="@+id/input_txt"/>

            <TextView
                android:id="@+id/result_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_below="@+id/process_btn"
                android:textSize="20dp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/txt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Optimizer used - 'sgd' - Stochastic Gradient Descent"
                android:layout_below="@+id/result_txt"
                android:textColor="#3F51B5"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/txt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loss function used - Mean Squared Error"
                android:layout_below="@+id/txt1"
                android:textColor="#3F51B5"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/txt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Epochs : 50"
                android:layout_below="@+id/txt2"
                android:textColor="#3F51B5"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/txt4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="X : [-1.0, 0.0, 1.0, 2.0, 3.0, 4.0]"
                android:layout_below="@+id/txt3"
                android:textColor="#3F51B5"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/txt5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Y : [-3.0, -1.0, 1.0, 3.0, 5.0, 7.0]"
                android:layout_below="@+id/txt4"
                android:textColor="#3F51B5"
                android:layout_marginTop="10dp"/>



        </RelativeLayout>
    </ScrollView>



</RelativeLayout>