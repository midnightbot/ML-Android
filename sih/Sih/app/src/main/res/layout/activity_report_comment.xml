<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.abc.sih.Reports.ReportComp"
    android:background="#3F3939">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_above="@id/type"
        android:overScrollMode="never">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/upar">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/abt_user">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/user_single_image"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:src="@drawable/default_avatar" />
                    <TextView
                        android:id="@+id/user_single_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:text="Display Name"
                        android:textColor="#fff"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:textColor="#fff"
                        android:id="@+id/postime"
                        android:layout_marginTop="15dp"
                        android:textSize="18sp"
                        android:layout_marginLeft="50dp"/>

                </LinearLayout>




                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="300dp"
                    android:layout_below="@+id/abt_user"
                    android:id="@+id/uploaded_image"
                    android:src="@drawable/bg_background"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="29dp"
                    android:layout_below="@+id/uploaded_image"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/heart"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/upvote_icon"
                    android:clickable="true"/>
                <!--android:onClick="onClick"-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="24dp"
                    android:textColor="#fff"
                    android:layout_below="@id/uploaded_image"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/upvote_icon"
                    android:id="@+id/likes"/>


                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="24dp"
                    android:layout_below="@+id/uploaded_image"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/comment_icon"
                    android:id="@+id/comment"/>
            </RelativeLayout>



            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/upar"
                android:id="@+id/comments_list"
                android:layout_above="@+id/type">

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>

    <at.markushi.ui.CircleButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:id="@+id/type"
        android:src="@drawable/send_img"
        android:paddingTop="16dp"
        android:paddingBottom="12dp"/>

    <EditText
        android:id="@+id/comment_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="-4dp"
        android:layout_toLeftOf="@+id/type"
        android:background="@drawable/tpp"
        android:hint="Enter message.."
        android:paddingLeft="10dp"
        android:paddingTop="16dp"
        android:paddingRight="10dp"
        android:paddingBottom="12dp"
        android:layout_marginVertical="5dp"
        android:layout_marginLeft="5dp"
        />

</RelativeLayout>